<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>greed-server</id>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
		<files>
			<file>
				<source>src/main/resources/weibobak.properties</source>
				<outputDirectory>/</outputDirectory>
				<destName>weibobak.properties</destName>
				<fileMode>0755</fileMode>
			</file>
			<file>
				<source>bin/run.bat</source>
				<outputDirectory>/</outputDirectory>
				<destName>run.bat</destName>
				<fileMode>0755</fileMode>
			</file>
			<file>
				<source>bin/run.sh</source>
				<outputDirectory>/</outputDirectory>
				<destName>run.sh</destName>
				<fileMode>0755</fileMode>
			</file>
		</files>
	<fileSets>
		<fileSet>
			<directory>logs</directory>
			<outputDirectory>logs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>bakdir</directory>
			<outputDirectory>bakdir</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>

</assembly>
